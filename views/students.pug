include profile
    block loadStyle 
        link(rel="stylesheet", href="stylesheets/students.css")
    block loadScript
        script(src="javascripts/students.js") 
    block content
        p.medium-font Students
        div.card.container-fluid
            div.card-body.border-none
                div.row
                    div.col-md-3
                        input(
                            type="text" 
                            class="input remove-focus form-control"
                            placeholder="Search"
                            ) 
                    div.col-md-6 
                    div.col-md-3
                        button.btn.btn-light.mx-4 Export
                        button.btn.btn-primary(data-bs-toggle="modal" data-bs-target="#student-modal") Add Students
        div.modal.animate__animated.animate__slideInDown.animate__faster#student-modal
            div.modal-dialog.modal-dialog-centered.modal-lg
                div.modal-content
                    div.modal-body.px-4
                        h4.medium-font Students
                        form
                            div.row
                                div.col-md-6
                                    div.form-group.mb-3
                                        input(required type="text", name="studentName" placeholder="Student Name", class="form-control input remove-focus")
                                    div.form-group.mb-3
                                        input(required type="email" name="studentEmail" placeholder="Student Email" class="form-control input remove-focus")
                                    div.form-group.mb-3
                                        input(required type="text" name="studentFather" placeholder="Student Father" class="form-control input remove-focus")
                                    div.form-group.mb-3
                                        input(required type="date" name="studentDob" placeholder="Student DOB" class="form-control input remove-focus")
                                    div.form-group.mb-3.d-flex
                                        button.code.btn.btn-light(type="button") (+91)
                                        input(required type="number" name="studentMobile" placeholder="Student Mobile" class="form-control input remove-focus")
                                div.col-md-6
                                    div.form-group.mb-3
                                        input(required type="text" name="studentCountry" placeholder="Student Country" class="form-control country input remove-focus")
                                    div.form-group.mb-3
                                        input(required type="text" name="studentState" placeholder="Student State" class="form-control input remove-focus")
                                    //- div.form-group.mb-3
                                    //-     input(required type="text" name="studentCity" placeholder="Student City" class="form-control input remove-focus")
                                    div.form-group.mb-3
                                        input(required type="number" name="studentPincode" placeholder="Student Pincode" class="form-control input remove-focus")
                                    div.form-group.mb-3
                                        textarea(required placeholder="Student Address" name="studentAddress" class="form-control input remove-focus")

                                    button.btn.btn-primary.float-end(type="submit") Submit