div.modal.animate__animated.animate__zoomIn#login-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg",width="100%", alt="")
                    div.col-md-6
                        h1.display-4(style="font-size:35px") User login
                        form#login-form
                            div.form-group.mb-4
                                input.form-control.p-4(type="email" placeholder="Company Email" name="email")
                            div.form-group.mb-4
                                input.form-control.p-4(type="password" placeholder="Company Password" name="password")
                            div.form-group.mb-4
                                button.btn.btn-primary.login-btn(type="submit") Login
                                button.btn.btn-danger.disabled.d-none.before-send
                                    span.spinner-grow.spinner-grow-sm
                                    span  Processing...
                            p Create New Account 
                                a(href="#" id="signup-modal-request") Signup
